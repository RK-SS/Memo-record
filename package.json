{
  "name": "memo-notes",
  "version": "1.0.0",
  "description": "备忘记事录 - 一个简洁高效的笔记管理工具",
  "author": "R.K <rkss1900@163.com>",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "node start-dev.js",
    "dev:renderer": "vite",
    "dev:main": "npm run build:main && electron dist/main/index.js",
    "build": "npm run build:renderer && npm run build:main && npm run copy:preload",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "copy:preload": "copy src\\main\\preload.js dist\\main\\preload.js",
    "electron": "electron dist/main/index.js",
    "pack": "npm run build && electron-builder",
    "pack:win": "npm run clean:build && npm run build && electron-builder --win",
    "pack:win-portable": "npm run build && electron-builder --win --config.win.target=portable",
    "pack:win-dir": "npm run build && electron-builder --win --dir",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:linux": "npm run build && electron-builder --linux",
    "clean": "rimraf dist release",
    "clean:build": "rimraf build-output",
    "clean:all": "rimraf dist release node_modules && npm install",
    "prepack": "npm run clean"
  },
  "build": {
    "appId": "com.rk.memo-notes",
    "productName": "备忘记事录",
    "directories": {
      "output": "build-output"
    },
    "files": [
      "dist/**/*",
      "!dist/main/preload-simple.js",
      "assets/icon.png",
      "node_modules/**/*",
      "!node_modules/**/*.md",
      "!node_modules/**/*.ts",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/__tests__/**",
      "!node_modules/**/*.map",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/README*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/.github/**",
      "!node_modules/**/docs/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "${productName}.exe"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "rimraf": "^6.1.2",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.0"
  },
  "dependencies": {
    "@vueuse/core": "^10.0.0",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "pinia": "^2.1.0",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0",
    "vuedraggable": "^4.1.0"
  }
}
